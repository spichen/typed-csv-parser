{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "testMatch": ["**/*.spec.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "rootDir": ".",
  "testTimeout": 10000,
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
